{
  "env": {
    "node": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 2022,
    "sourceType": "module"
  },
  "rules": {
    "no-console": "off",
    "semi": [
      "error",
      "always"
    ],
    "quotes": [
      "error",
      "single"
    ],
    "indent": [
      "error",
      4
    ],
    "vars-on-top": "error",
    "no-var": "error",
    "prefer-const": "error",
    "no-unused-vars": "error",
    "no-undef": "error",
    "no-const-assign": "error",
    "no-new-object": "error",
    "no-array-constructor": "error",
    "no-new-wrappers": "error",
    "no-new-func": "error",
    "no-with": "error",
    "no-caller": "error",
    "no-eval": "error",
    "no-implied-eval": "error",
    "no-extend-native": "error",
    "no-extra-bind": "error",
    "no-loop-func": "error",
    "no-new-symbol": "error",
    "no-new-require": "error",
    "no-path-concat": "error",
    "no-prototype-builtins": "error",
    "no-return-assign": "error",
    "no-self-compare": "error",
    "max-depth": [
      "error",
      4
    ],
    "max-lines": [
      "error",
      300
    ],
    "max-nested-callbacks": [
      "error",
      3
    ],
    "max-params": [
      "error",
      3
    ],
    "max-statements": [
      "error",
      10
    ],
    "complexity": [
      "error",
      5
    ],
    "max-lines-per-function": [
      "error",
      50
    ],
    "object-curly-newline": [
      "error",
      {
        "multiline": true,
        "minProperties": 3,
        "consistent": true
      }
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ]
  }
}